# Test comment for svn :)
# unit_status_text_topleft_corner is the top left pixel coordinate
# pair (x)(y) for units description text
unit_status_text_topleft_corner 30 470

# rgb color for the text (RED)(GREEN)(BLUE)
# for example, 255 255 255 = white
unit_status_text_color 255 255 50

# scoreboard_text_topleft_corner is the top left pixel coordinate
# pair (x)(y) for scoreboard
scoreboard_text_topleft_corner 625 102

# rgb color for the text (RED)(GREEN)(BLUE)
# for example, 0 0 0 = black
scoreboard_text_color 0 0 0

# Player x is making moves...
making_moves_text_topleft_corner 20 470
making_moves_text_color 230 230 230

